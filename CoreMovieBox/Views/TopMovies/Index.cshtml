@using EntityLayer.Concrete
@model List<Top10MovieList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MovieID</td>
            <td><img src="@item.Image" style="width: 100px; height: 100px;" /></td>
            <td><a href="/TopMovies/DeleteTopMovie/@item.MovieID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/TopMovies/UpdateTopMovie/@item.MovieID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/TopMovies/AddTopMovie" class="btn btn-primary">Yeni Film Girişi</a>
